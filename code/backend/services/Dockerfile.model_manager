# Octopus AI - Model Manager
# Handles dynamic loading of Qwen3-VL-30B and DIA2
# Requires NVIDIA GPU with 24GB+ VRAM

FROM nvidia/cuda:12.1.0-cudnn8-runtime-ubuntu22.04

# Prevent interactive prompts
ENV DEBIAN_FRONTEND=noninteractive

# Install system dependencies
RUN apt-get update && apt-get install -y \
    python3.10 \
    python3-pip \
    git \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip3 install --no-cache-dir -r requirements.txt

# Copy service code
COPY services/model_manager.py .
COPY services/qwen3_vl_service.py .
COPY services/dia2_service.py .
COPY services/sensevoice_service.py .
COPY services/emovit_service.py .
COPY services/face_recognition_service.py .

# Create directories
RUN mkdir -p /models/cache /logs

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV TRANSFORMERS_CACHE=/models/cache
ENV PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# Health check script
COPY <<EOF /app/healthcheck.py
import requests
import sys

try:
    response = requests.get('http://localhost:8088/health', timeout=5)
    if response.status_code == 200:
        sys.exit(0)
    else:
        sys.exit(1)
except:
    sys.exit(1)
EOF

HEALTHCHECK --interval=60s --timeout=30s --start-period=120s --retries=3 \
    CMD python3 /app/healthcheck.py

# Expose port
EXPOSE 8088

# Run service
CMD ["python3", "-m", "uvicorn", "model_manager:app", "--host", "0.0.0.0", "--port", "8088"]